<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:padding="28dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgNoRecFound"
        android:contentDescription="@string/no_search_found"
        android:src="@drawable/ic_no_record_found"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/txtNoRecFound"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorMainFont"
        tools:text="@string/no_search_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>